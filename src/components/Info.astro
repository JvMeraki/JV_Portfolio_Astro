---
const isBrowser = typeof window !== "undefined";
---

<style>
  .info-overlay {
    @apply fixed inset-0 z-50 flex items-start justify-center pt-20 px-4;
    background-color: rgba(0, 0, 0, 0.4);
  }

  .info-box {
    @apply bg-white text-black rounded-xl shadow-lg p-6 max-w-md w-full relative flex items-start gap-4;
  }

  .close-button {
    @apply absolute top-2 right-2 text-[var(--orange)] hover:text-gray-700 cursor-pointer text-2xl pr-2;
  }

  .info-icon {
    @apply w-10 h-10 text-yellow-500 shrink-0;
  }
</style>

<script>
  if (typeof window !== "undefined") {
    window.addEventListener("DOMContentLoaded", () => {
      const closeBtn = document.getElementById("info-close-btn");
      const overlay = document.getElementById("info-overlay");
      closeBtn?.addEventListener("click", () => {
        overlay?.remove();
      });
    });
  }
</script>

<div id="info-overlay" class="info-overlay">
  <div class="info-box">
    <svg
      class="info-icon"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 24 24"
    >
      <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"></path>
    </svg>
    <div>
      <p class="text-base font-medium">
        This portfolio is currently under construction. Some sections may not be
        fully functional yet.
      </p>
    </div>
    <button id="info-close-btn" class="close-button" aria-label="Close"
      >&times;</button
    >
  </div>
</div>
